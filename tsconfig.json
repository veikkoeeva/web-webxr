  {
  "compilerOptions": {
    //The JS compiler in the second step optimizes when doing a relase build.
    "removeComments": false,

    "forceConsistentCasingInFileNames": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["esnext", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "out-tsc",
    "sourceMap": true,
    "inlineSources": true,
    "allowJs": false,
    "noImplicitAny": false,
    "rootDir": "./",

    "strictNullChecks": false
  },
  "include": ["**/*.ts"]
}
